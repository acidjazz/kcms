
extends layout
block content
  .header
    .client
      include ../svg/talko.svg
    .oc
      img(src='/img/outcast.png')
    .clear



  .container

    form#form
      .submit
        input(type='submit', value='Submit')
      each value, key in self.flat
        .field
          .label !{key.replace(/::/g, '<span>::</span>').replace(/;;/g, '<span>;;</span>')}

          .value
            if (value.length > 100)
              textarea(name=key) #{value}
            else
              input(type='text',value=value,name=key)
          .clear

    .footer this is the footer


block postscript
  script(type='text/javascript').
    function loadercomplete() {
      Loader.load('/jst/diff.js');
      Loader.load('/jst/status.js');
      Loader.load('/jst/kcms.js', 'Kcms');
    }
